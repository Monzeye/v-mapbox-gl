{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": "./",
    "outDir": "dist",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": [
      "vite/client",
      "../typings/mabbox.d.ts"
    ],
    "paths": {
      "v-mapbox-gl": [
        "../"
      ]
    }
  },
  "include": [
    "dist/**/*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "typings/**/*.d.ts",
    "typings/**/*.ts",
    "vite.config.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}