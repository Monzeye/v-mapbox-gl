{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": "./",
    "outDir": "dist",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "noImplicitAny": true,
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "lib/*"
      ],
      "#/*": [
        "typings/*"
      ]
    }
  },
  "include": [
    "dist/**/*.ts",
    "lib/**/*.ts",
    "lib/**/*.d.ts",
    "lib/**/*.vue",
    "typings/**/*.d.ts",
    "typings/**/*.ts",
    "vite.config.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}